# /etc/systemd/system/planqd.service
[Unit]
Description=planqd
ConditionPathExists=<ETHERMINTD_BINARY>
After=network.target

[Service]
Type=simple
User=<ETHERMINTD_USER>
WorkingDirectory=<ETHERMINTD_BINARY_DIR>
ExecStart=<ETHERMINTD_BINARY> start --home <ETHERMINTD_USER_HOME>/.planqd
Restart=on-failure
RestartSec=10
LimitNOFILE=50000

[Install]
WantedBy=multi-user.target
